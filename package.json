{
  "name": "@kookyleo/specspec",
  "version": "0.2.0",
  "description": "通用的 Spec DSL 引擎与核心规则库（code-as-spec）。",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./descriptors": {
      "types": "./dist/descriptors/index.d.ts",
      "default": "./dist/descriptors/index.js"
    },
    "./rules": {
      "types": "./dist/rules/index.d.ts",
      "default": "./dist/rules/index.js"
    },
    "./validators": {
      "types": "./dist/validators/index.d.ts",
      "default": "./dist/validators/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "test": "npm run build && vitest run",
    "test:watch": "vitest",
    "lint": "eslint src",
    "clean": "rm -rf dist"
  },
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "@types/node": "^24.10.1",
    "eslint": "^9.0.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.0.0",
    "vitest": "^3.0.0"
  },
  "keywords": [
    "spec",
    "dsl",
    "validation",
    "engine",
    "code-as-spec"
  ],
  "author": "kookyleo",
  "license": "Apache-2.0"
}
