{
  "name": "@specspec/core",
  "version": "0.3.0",
  "description": "A declarative DSL engine for validation specs (code-as-spec).",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "specspec": "dist/cli.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "tsc",
    "build:all": "npm run build && npm run build -w @specspec/types",
    "test": "npm run build && vitest run",
    "test:watch": "vitest",
    "lint": "eslint src",
    "clean": "rm -rf dist packages/*/dist"
  },
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "@types/node": "^24.10.1",
    "eslint": "^9.0.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.0.0",
    "vitest": "^3.0.0"
  },
  "keywords": [
    "spec",
    "dsl",
    "validation",
    "engine",
    "code-as-spec",
    "schema"
  ],
  "author": "kookyleo <kookyleo@gmail.com>",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/kookyleo/specspec.git"
  }
}
